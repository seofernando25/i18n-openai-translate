{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
